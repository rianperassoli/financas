<!DOCTYPE html>
<html>
  <head>   

    <% include ./partials/head %>    

  </head>
  <body>
  	<% include ./partials/app-header %>

  	<section>
  		<a href="/records/new" class="btn btn-primary">Add</a>

  		<table class="table table-striped table-bordered">
  			<thead>
  				<tr>
  					<th>Description</th>
  					<th>Date</th>
  					<th>Value</th>
  					<th>Type</th>
  					<th></th>
  				</tr>
  			</thead>

  			<tbody>
			  	<% records.forEach(function(record){ %>
			  		
			  		<tr>
			  			<td><%= record.description %></td>
			  			<td><%= record.date %></td>
			  			<td><%= record.value %></td>
			  			<td><%= record.type %></td>
			  			<td width="60">
			  				<a href="/records/<%= record._id %>/edit"> <i class="fas fa-pen"></i> </a>
			  				<a href="/records/<%= record._id %>/delete"> <i class="fas fa-trash"></i> </a>
			  			</td>
			  		</tr>	

			  	<% }) %>
	  		</tbody>
	    </table>	
  	</section>
    

  </body>
</html>
